@model NewAttributeViewModel

<form asp-action="New" asp-controller="Attribute" method="post" style="text-align:center">
    <div>
        <label for="attributeName">Название</label>
        <input asp-for="Name" id="attributeName" required/>
    </div>
    
    <label for="allowEditSelector">Роли с правом редактирования</label>
    <div>
        <select id="allowEditSelector" multiple
            asp-for="EditRolesIds">
            @foreach (var role in Model.Roles)
            {
                <option value="@role.Id">@role.Name</option>
            }
        </select>
    </div>
    
        
    <label for="allowViewSelector">Роли с правом просмотра</label>

    <div>
        <select id="allowViewSelector" multiple
            asp-for="ViewRolesIds">
            @foreach (var role in Model.Roles)
            {
                <option value="@role.Id">@role.Name</option>
            }
        </select>
    </div>
    
        
    <label for="typeSelector">Type</label>
    <select id="typeSelector"
        asp-for="AttributeType"
        asp-items="Html.GetEnumSelectList<AttributeType>()"
        onchange="showOptions(2, 'attributeOptions', 'typeSelector')">
    </select>

    <div>
        <label for="editSelfCheckbox">Владелец атрибута может его редактировать</label>
        <input id="editSelfCheckbox" type="checkbox" asp-for=AllowEditSelf />
    </div>
    
    <div>
        <label for="viewSelfCheckbox">Владелец атрибута может его видеть</label>
        <input id="viewSelfCheckbox" type="checkbox" asp-for="AllowViewSelf" />
    </div>
    
    
    <div id="attributeOptions" hidden="hidden">
        <button class="btn btn-primary" type="button" onclick="addAttributeOptionInput('attributeOptions','AttributeTitles','')">Добавить опцию</button>
    </div>
    
    <div>
        <button class="btn btn-primary">Создать</button>
    </div>
</form>

@section Scripts{
    <script src="~/js/Attribute/attributeHelper.js"></script>
}
